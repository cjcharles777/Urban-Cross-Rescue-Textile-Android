<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ucr.bravo.blackops.activities.AccessRequestActivity$PlaceholderFragment">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_email"
            android:id="@+id/emailText"
            android:layout_marginTop="106dp"
            android:layout_marginRight="39dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/requestAccessButton"
            android:layout_alignStart="@+id/requestAccessButton"
            android:editable="false"
            android:textAlignment="center"
            android:typeface="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/email_text"
            android:id="@+id/requesterLabelTextView"
            android:layout_alignTop="@+id/emailText"
            android:layout_toLeftOf="@+id/emailText"
            android:layout_alignLeft="@+id/jobRequesterTextView"
            android:layout_alignStart="@+id/jobRequesterTextView" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ignEditText"
            android:inputType="text"
            android:layout_below="@+id/emailText"
            android:layout_alignLeft="@+id/emailText"
            android:layout_alignStart="@+id/emailText"
            android:layout_marginTop="42dp"
            android:layout_alignRight="@+id/emailText"
            android:layout_alignEnd="@+id/emailText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/ingress_ign"
            android:id="@+id/jobRequesterTextView"
            android:layout_above="@+id/requestAccessButton"
            android:layout_toLeftOf="@+id/ignEditText" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/request_access"
            android:id="@+id/requestAccessButton"
            android:layout_below="@+id/ignEditText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp" />

    </RelativeLayout>

</RelativeLayout>
